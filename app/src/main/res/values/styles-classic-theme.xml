<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ClassicTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/classic_text</item> <!-- Text in popup, selected items in gridview, post entry button, -->
        <item name="colorPrimaryDark">@color/classic_text_light</item>
        <item name="textColorPrimary">@color/classic_text</item> <!-- e.g. EditText text -->
        <item name="textColorSecondary">@color/classic_text_secondary</item>
        <item name="colorAccent">@color/classic_text</item> <!-- e.g. fab-button -->
        <item name="background">@color/classic_background</item>
        <item name="textAppearanceListItem">@color/classic_text</item> <!-- primary text of list items -->

        <item name="android:editTextBackground">@color/classic_edit_text_background</item> <!-- editText -->
        <item name="android:editTextColor">@color/classic_text</item> <!-- editText -->

        <item name="android:colorControlNormal">@color/classic_edit_text_background</item> <!-- E.g. Toolbar menu button, checkbox unchecked, scrollbar-->
        <item name="android:colorControlHighlight">@color/classic_text_light</item> <!-- highlighting -->
        <!--        <item name="android:colorControlActivated">@color/yellow_light</item> <!- E.g. checkbox checked -->

        <item name="android:statusBarColor">@color/classic_text</item> <!-- the android "status" bar on top -->
        <item name="android:navigationBarColor">@color/classic_text</item> <!-- back buttons bar -->
        <item name="android:buttonStyle">@style/ClassicTheme.ButtonTheme</item>
        <item name="android:checkboxStyle">@style/ClassicTheme.CheckboxTheme</item>
        <item name="actionBarPopupTheme">@style/ClassicTheme.AppBarOverlay</item> <!-- toolbar -->
        <item name="popupTheme">@style/ClassicTheme.PopupOverlay</item> <!-- menu -->

        <!-- EntryStyles -->
        <item name="politics">@color/red</item>
        <item name="complaints27">@color/gray</item>
        <item name="noshow44">@color/transparent</item>
        <item name="nerd31vs45">@color/orange</item>
        <item name="nsfw">@color/red_dark</item>
        <item name="normalentry">@color/classic_text</item>

        <!-- Navigation bar text- & iconColor -->
        <item name="navbarTextColor">@color/classic_text</item>
        <item name="navbarIconTint">@color/classic_text</item>

    </style>
    <style name="ClassicTheme.NoActionBar" parent="ClassicTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Theme for ToolBar -->
    <style name="ClassicTheme.AppBarOverlay" parent="ClassicTheme">
        <item name="android:textColorPrimary">@color/classic_edit_text_background</item> <!-- Text -->
        <item name="android:textColorSecondary">@color/classic_edit_text_background</item> <!-- Icons -->
        <item name="navigationDrawerTheme">@style/ClassicTheme.NavigationDrawer</item> <!-- drawer -->
    </style>
    <!-- Theme for Buttons -->
    <style name="ClassicTheme.ButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/classic_text_secondary</item>
        <item name="android:background">@color/classic_text</item>
    </style>
    <!-- Theme for CheckBox -->
    <style name="ClassicTheme.CheckboxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/classic_text</item>
    </style>
    <!-- Theme for Navigation Drawer -->
    <style name="ClassicTheme.NavigationDrawer">
        <item name="background">@color/classic_text</item>
    </style>
    <!-- Theme for menues -->
    <style name="ClassicTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>